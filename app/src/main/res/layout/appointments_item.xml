<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:cardCornerRadius="50dp"
            android:layout_margin="8dp">
            <ImageView
                android:id="@+id/ivPatientImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile_icon" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="7dp">
            <TextView
                android:id="@+id/tvPatientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Natasha Romanoff"
                android:textColor="@color/appointmentsnamescolor"
                android:padding="5dp"
                android:textSize="16sp"
                android:textStyle="normal"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvDisease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thyroid"
                android:textColor="@color/discease_reason_text"
                android:layout_gravity="start"
                android:gravity="start"
                android:padding="5dp"
                android:textSize="14sp"
                android:textStyle="normal"
                android:background="@drawable/disease_bg"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/time_bg"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/time_icon"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tvAppointmentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:00 PM"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="16sp"
                android:padding="3dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>