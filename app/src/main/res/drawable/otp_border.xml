<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer highlight -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#ECECEC" />
            <padding
                android:top="-2dp"
                android:bottom="-2dp"
                android:left="-2dp"
                android:right="-2dp" />
        </shape>
    </item>

    <!-- Inner shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#ECECEC" />
            <stroke
                android:width="2dp"
                android:color="#FDFAFA" />
        </shape>
    </item>

    <!-- Center fill to simulate depth -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#FDFAFA" />
        </shape>
    </item>
</layer-list>
